{
    $user = $this-&gt;get('security.context')-&gt;getToken()-&gt;getUser();
    //Since 2.6
    $user = $this-&gt;get('security.token_storage')-&gt;getToken()-&gt;getUser();
    //or
    $user = $this-&gt;getUser();
    
    
}
</code></pre>{% endraw %}

